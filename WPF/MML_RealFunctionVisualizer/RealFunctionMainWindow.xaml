<Window x:Class="MML_RealFunctionVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MML_RealFunctionVisualizer"
        xmlns:vizbase="clr-namespace:MML_VisualizersBase;assembly=MML_VisualizersBase"
        mc:Ignorable="d"
        Title="Real function visualizer" Height="850" Width="1200" SizeChanged="Window_SizeChanged">
  
  <Grid Background="White">
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="200" />
    </Grid.ColumnDefinitions>

    <Canvas Grid.Row="1" Grid.Column="0" x:Name="mainCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    </Canvas>
    
    <TextBox x:Name="txtTitle" Text="Title" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="769" Height="40" FontSize="22" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Padding="0" BorderBrush="{x:Null}"/>

    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">
      <GroupBox Header="Legend" Margin="0,0,0,10">
        <vizbase:LegendWidget x:Name="LegendWidgetControl" Margin="5"/>
      </GroupBox>
      
      <GroupBox Header="Info">
        <StackPanel Margin="5">
          <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="X min:" Grid.Column="0"/>
            <TextBox x:Name="txtXMin" Grid.Column="1" TextWrapping="Wrap"/>
          </Grid>
          <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="X max:" Grid.Column="0"/>
            <TextBox x:Name="txtXMax" Grid.Column="1" TextWrapping="Wrap"/>
          </Grid>
          <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Y min:" Grid.Column="0"/>
            <TextBox x:Name="txtYMin" Grid.Column="1" TextWrapping="Wrap"/>
          </Grid>
          <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Y max:" Grid.Column="0"/>
            <TextBox x:Name="txtYMax" Grid.Column="1" TextWrapping="Wrap"/>
          </Grid>
          <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="70"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Num points:" Grid.Column="0"/>
            <TextBox x:Name="txtNumPoints" Grid.Column="1" TextWrapping="Wrap"/>
          </Grid>
        </StackPanel>
      </GroupBox>
    </StackPanel>
  </Grid>
</Window>
