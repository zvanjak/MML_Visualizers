<Window x:Class="MML_ParticleVisualizer2D.ParticleVisualizer2D_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MML_ParticleVisualizer2D"
        mc:Ignorable="d"
        Title="Particle visualizer 2D" Height="1000" Width="1300">
  <Grid Margin="0,0,0,0" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="200" />
    </Grid.ColumnDefinitions>

    <Canvas Name="MyCanvas" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Height="980" Margin="0,4,0,0" VerticalAlignment="Top" Width="1000" />

    <Button x:Name="btnStartSim" Content="Start" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,12,0,0" Click="btnStartSim_Click" VerticalAlignment="Top" Width="98"/>

    <TextBox x:Name="txtNumSteps" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="116,99,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="60"/>
    <Label Content="Num. of steps:" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="14,95,0,0" VerticalAlignment="Top"/>
    <Label Content="Refresh every " Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="16,142,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="txtRefreshEvery" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="116,146,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="33"/>
    <Label Content="steps" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="867,0,0,0" VerticalAlignment="Top"/>
    <Label Content="Step delay" Grid.Column="1" HorizontalAlignment="Left" Margin="16,192,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="txtDT" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="116,200,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="33"/>
    <Label Content="ms"  Grid.Column="1" HorizontalAlignment="Left" Margin="154,196,0,0" VerticalAlignment="Top"/>

  </Grid>
</Window>
